<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".SEARCH.SearchResults">
    <!--找不到书籍的文本-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/findtext"
        android:layout_centerInParent="true"
        android:textSize="17sp"
        android:textColor="#E9BDBCBC"
        />
    <!--刷新按钮-->
    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/shuxin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/findtext"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:text="@string/shua_xin"/>
    <!--加载条-->
    <ProgressBar
        android:id="@+id/load"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <!--加载中文本-->
    <TextView
        android:id="@+id/load2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_more"
        android:textColor="#1C3C38"
        android:layout_below="@id/load"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/not_find"
        android:layout_above="@+id/findtext"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="5dp"/>
    <ListView
        android:id="@+id/listview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>


</RelativeLayout>